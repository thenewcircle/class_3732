<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:textAppearanceSmall">@style/Text.CreatedAt</item>
        <item name="android:textAppearanceMedium">@style/Text.Message</item>
        <item name="android:textAppearanceLarge">@style/Text.User</item>
    </style>

    <style name="Text.CreatedAt" parent="android:TextAppearance.Holo.Small">
        <item name="android:textColor">#0000CC</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.User" parent="android:TextAppearance.Holo.Large">
        <item name="android:textColor">#007700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text.Message" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="PostButton" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/button_background</item>
    </style>
</resources>
